<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/buttonEndGradient" />
            <corners android:radius="50dip" />
            <gradient android:endColor="@color/buttonEndGradient" android:startColor="@color/dustyOrange" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/buttonEndGradient" />
            <corners android:radius="50dip" />
            <gradient android:endColor="@color/buttonEndGradient" android:startColor="@color/dustyOrange" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/pinkishGrey" />
            <corners android:radius="50dip" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>